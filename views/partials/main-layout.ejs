<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
    </style>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <%- include('navbar') %>
    <div class="container min-vh-100"><%- body %></div>
    <%- include('footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      function setActive() {
        const navLinks = document.getElementsByClassName("nav-link");
        const currentPath = window.location.pathname.split("/").pop() || "/"; // Handle root path
        console.log("Current Path:", currentPath);
        console.log("Path from href:", window.location.pathname.split("/"));

        Array.from(navLinks).forEach((link) => {
          // Normalize link path and handle root path
          const linkPath = link.getAttribute("href").split("/").pop() || "/";

          // Handle homepage case
          if (currentPath === linkPath || (currentPath === "/" && linkPath === "")) {
            link.classList.add("active");
          } else {
            link.classList.remove("active");
          }
        });
      }

      document.addEventListener("DOMContentLoaded", function () {
        const navLinks = document.getElementsByClassName("nav-link");

        Array.from(navLinks).forEach((link) => {
          link.addEventListener("click", function () {
            Array.from(navLinks).forEach((otherLink) => {
              otherLink.classList.remove("active");
            });
            this.classList.add("active");
          });
        });

        setActive();
      });
    </script>
  </body>
</html>
